<!DOCTYPE html>
<html lang="en">
  {{ template "header" . }}
  <body>
    {{ template "nav" . }}
    <main>
      <div class="container col-md-10 mt-3" id=app>
        <h5 class="text-center">What Types of Items Would You Like To Donate?</h2>
        <p class="text-center">STEP 1 OF 2</p>
          <div v-cloak>
              <form
                class="row"
                @submit="checkForm"
              >

              {{ range .ItemTypes }}
              <div class="col-md-4 mb-1">
                <div class="form-check p-1">
                    <input class="form-check-input" type="checkbox" value="{{.Id}}" id="{{.Id}}" v-model="donate.itemTypes">
                    <label for="{{.Id}}" class="form-check-label">{{.Name}}</label>
                </div>
              </div>
              {{ end }}

              <div class="row mt-3 mb-5">
                <div class="col text-center">
                  <button type="submit" class="btn btn-primary">Next ></button>
                </div>
              </div>

            </form>
          </div>
        </div>
      </main>
    {{ template "footerScripts" .}}
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="/assets/views/donate1.js"></script>
  </body>
</html>
